<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="3dp">

    <LinearLayout
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            />


        <androidx.cardview.widget.CardView
            orientatioin= "vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0.5dp"
            android:padding="3dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/takeattendanceStudentName"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="StudentName"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/takeattendanceStudentID"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="StudentId"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <RadioGroup
                android:layout_marginTop="5dp"
                android:id="@+id/radioGroupId"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textSize="17sp"
                    android:id="@+id/presentRadioBtn"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Present"
                    android:gravity="center_horizontal" />

                <RadioButton
                    android:textSize="17sp"
                    android:id="@+id/absentRadioBtn"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Absent"
                    android:gravity="center_horizontal" />


            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>