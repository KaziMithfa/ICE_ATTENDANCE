<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_passwordsettings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/resetpasswordtoolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Reset Password"
             />
    </com.google.android.material.appbar.AppBarLayout>


    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_passwordsettings"
        android:layout_marginTop="246dp"
        android:gravity="center"
        android:hint="Confirm your password...."
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/resetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmpassword"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Reset your password...."
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submissionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />




</RelativeLayout>